<div class="modal fade" tabindex="-1" role="dialog" id="seeDetails" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <div class="modal-header">
                <h5 class="modal-title">Otkaži let?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <input type="hidden" name="name" id="flightId" value="" />
                    <div class="form-group row">
                        <label class="col-md-4">Datum leta: </label>
                        <div class="cod-md-8">
                            <input  class="form-control" id="flightDate"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4" >Iz: </label>
                        <div class="cod-md-8">
                            <input  class="form-control" id="flightFrom"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4">Za: </label>
                        <div class="cod-md-8">
                            <input  class="form-control" id="flightTo"/>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" onclick="cancelFlight();">Obriši</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Nazad</button>
            </div>
        </div>
    </div>
</div>
